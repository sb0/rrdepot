<!DOCTYPE html>
<html>
<head>
  <title>RR Depot Store</title>
  <%= stylesheet_link_tag    "scaffold" %>
  <%= stylesheet_link_tag    "rrdepot", :media => "all" %>
  <%#= javascript_include_tag :defaults %>
  <%#= javascript_include_tag 	"http://ajax.aspnetcdn.com/ajax/jquery/jquery-1.8.0.js", "http://ajax.aspnetcdn.com/ajax/jquery.ui/1.8.22/jquery-ui.js", "application" %>
  <%= javascript_include_tag 	"application" %>
  <%= csrf_meta_tags %>
</head>
<body id="store">
  <div id="banner">
    <%= image_tag("logo.png") %>
    <%= @page_title || "RR Depot Catalog" %>
  </div>
  <div id="columns">
    <div id="side">
<!--
      <div id="cart" 
        <%# if cart.line_items.empty? %> style="display:none" 
        <%# end %> 
      >
-->
      <% if @cart %>
        <%= hidden_div_if(@cart.line_items.empty?, :id => "cart") do %>
          <!-- storecontroller/index defines a @cart -->
          <%= render @cart %>
        <% end %>
      <% end %>
      </div>


      <a href="/">Home</a>
      <a href="/store">Store</a>
      <a href="/faq">FAQ</a>
      <a href="/contact">Contact</a>
      <a href="/about">About</a>


    </div>
    <div id="main">
      <!-- the view rendered from controller/action 
          routed URL will go below -->
      <%= yield %>
    </div>
  </div>
</body>
</html>
